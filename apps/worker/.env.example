REDIS_URL="redis://localhost:6379"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/coloring_portal?schema=public"

# ── Generation safety guards ──────────────────────────────────────────────────

# Master switch – set to false to disable all AI generation (scheduler + worker)
GENERATION_ENABLED=true

# Multiplier applied to each PromptCategory.dailyQuota in generate:daily
# 1.0 = use dailyQuota as-is, 2.0 = double the output, 0.5 = half
DAILY_QUOTA_MULTIPLIER=1.0

# Maximum total GenerationPrompts that can be created today (across all categories)
# Leave unset or 0 to disable the cap
GLOBAL_DAILY_CAP=50

# ── ai-generate worker ────────────────────────────────────────────────────────

# How many images are generated in parallel
AI_CONCURRENCY=2

# After this many failed attempts a GenerationPrompt is marked SKIPPED
AI_MAX_ATTEMPTS=2

# ── translate-page worker ─────────────────────────────────────────────────────

# Master switch – set to false to skip all translation jobs without removing them
# from the queue. Useful for cost control or maintenance windows.
TRANSLATION_ENABLED=true

# Maximum number of locales sent to the AI in a single OpenAI call.
# Keep ≤ 6 to stay within typical token / rate-limit budgets.
# If SUPPORTED_LOCALES has more entries than this value, the worker will
# automatically split them into sequential batches.
TRANSLATION_BATCH_SIZE=6
